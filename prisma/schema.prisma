generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  chats    Chat[]
}

model Chat {
  id                  Int           @id @default(autoincrement())
  chatUUID                String        @unique
  chatName            String
  gptChatSummary      String
  llamaChatSummary    String
  grokChatSummary     String
  deepseekChatSummary String
  mistralChatSummary  String
  user                User          @relation(fields: [userID], references: [id])
  userID              Int
  ChatHistories       ChatHistory[]
}

model ChatHistory {
  id       Int    @id @default(autoincrement())
  gpt      String
  llama    String
  grok     String
  deepseek String
  mistral  String
  chat     Chat   @relation(fields: [chatID], references: [chatUUID])
  chatID   String
}
